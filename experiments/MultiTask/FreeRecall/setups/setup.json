{
    "run_num": 3,
    "model": {
        "class": "DeepValueMemoryGRU",
        "hidden_dim": 128,
        "input_dim": 52,
        "output_dims": [21],
        "input_encoder_dims": [64],
        "output_encoder_dims": [],
        "use_memory": true,
        "softmax_beta": 1.0,
        "evolve_state_between_phases": true,
        "em_gate_type": "scalar_sigmoid",
        "mem_beta_decay": true,
        "mem_beta_decay_rate": 0.5,
        "random_init_noise": 0.1,
        "subclasses": [{
            "name": "memory_module",
            "class": "ValueMemory",
            "value_dim": 128,
            "capacity": 8,
            "recall_method": "weight_sum",
            "subclasses": [
                {
                    "name":"similarity_measure",
                    "class": "BasicSimilarity",
                    "process_similarity": "softmax",
                    "softmax_temperature": 0.1
                }
            ]
        }]
    },
    "training": [{
        "env": [{
            "vector_env": {
                "mode": "sync",
                "batch_size": 32
            },
            "class": "ConditionalEMRecall",
            "wrapper": [{
                "class": "MetaLearningEnv"
            }],
            "num_features": 2,
            "feature_dim": 2,
            "sequence_len": 8,
            "vocabulary_num": 20,
            "value_dim": 2,
            "reset_state_before_test": true,
            "correct_reward": 1.0,
            "no_action_reward": -0.0,
            "wrong_reward": -1.0,
            "include_question_during_encode": false,
            "no_condition": true
        }],
        "trainer": {
            "training_function": "train",
            "num_iter": 5e5,
            "test_iter": 1000,
            "save_iter": 10000,
            "stop_test_accu": 0.99,
            "use_memory": true,
            "used_output_index": [0],
            "mem_beta_decay_threshold": 0.85,
            "criterion": {
                "class": "MultiRLLoss",
                "criteria": [
                    {
                        "class": "A2CLoss",
                        "use_V": true,
                        "eta": 0.01,
                        "gamma": 0.99
                    }
                ]
            },
            "ax_criterion": {
                "class": "MultiAuxiliaryLoss",
                "criteria": [
                    {
                        "class": "MemoryOneHotRegularization"
                    }
                ]
            },
            "optimizer": {
                "class": "Adam",
                "lr": 1e-3,
                "weight_decay": 1e-5,
                "lr_decay_factor": 0.1,
                "lr_decay_patience": 20,
                "lr_decay_threshold": 1e-4,
                "min_lr": 1e-7
            }
        }
    }],
    "load_saved_model": false,
    "context_num": 1000
}