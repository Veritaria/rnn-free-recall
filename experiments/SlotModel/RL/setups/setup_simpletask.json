{
    "model": {
        "class": "ValueMemoryCTRNN",
        "hidden_dim": 64,
        "input_dim": 11,
        "output_dim": 11,
        "em_gate_type": "scalar",
        "start_recall_with_ith_item_init": 1,
        "softmax_beta": 0.5,
        "subclasses": [{
            "name": "memory_module",
            "class": "ValueMemory",
            "value_dim": 64,
            "capacity": 3,
            "subclasses": [
                {
                    "name":"similarity_measure",
                    "class": "BasicSimilarity",
                    "process_similarity": "softmax"
                }
            ]
        }]
    },
    "training": [{
        "env": {
            "class": "FreeRecall",
            "vocabulary_num": 10,
            "memory_num": 3,
            "retrieve_time_limit": 3,
            "start_recall_cue": false,
            "reset_state_before_test": true,
            "true_reward": 1.0,
            "false_reward": -0.1,
            "repeat_penalty": -1.0
        },
        "trainer": {
            "training_function": "train_model",
            "num_iter": 100000,
            "test": false,
            "test_iter": 1000,
            "save_iter": 2000,
            "use_memory": true,
            "stop_test_accu": 0.99,
            "criterion": {
                "class": "A2CLoss",
                "use_V": true
            },
            "optimizer": {
                "class": "Adam",
                "lr": 2e-4,
                "lr_decay_factor": 0.2,
                "lr_decay_patience": 20,
                "lr_decay_threshold": 1e-3,
                "min_lr": 1e-8
            }
        }
    }],
    "load_saved_model": true,
    "pretrain": false,
    "context_num": 1000
}