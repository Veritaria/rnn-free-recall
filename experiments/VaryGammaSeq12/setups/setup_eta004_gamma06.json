{
    "run_num": 20,
    "model": {
        "class": "ValueMemoryGRU",
        "hidden_dim": 128,
        "input_dim": 144,
        "output_dims": [
            65
        ],
        "use_memory": true,
        "softmax_beta": 1.0,
        "evolve_state_between_phases": true,
        "em_gate_type": "constant",
        "mem_beta_decay": false,
        "mem_beta_decay_rate": 0.95,
        "mem_beta_min": 0.0002,
        "init_state_type": "noise_all",
        "flush_noise": 1.0,
        "subclasses": [
            {
                "name": "memory_module",
                "class": "ValueMemory",
                "value_dim": 128,
                "capacity": 12,
                "recall_method": "weight_sum",
                "remove_retrieved": false,
                "subclasses": [
                    {
                        "name": "similarity_measure",
                        "class": "BasicSimilarity",
                        "process_similarity": "softmax",
                        "softmax_temperature": 0.05
                    }
                ]
            }
        ]
    },
    "model_for_record": {
        "class": "ValueMemoryGRU",
        "hidden_dim": 128,
        "input_dim": 144,
        "output_dims": [
            65
        ],
        "use_memory": true,
        "softmax_beta": 1.0,
        "evolve_state_between_phases": true,
        "em_gate_type": "constant",
        "mem_beta_decay": false,
        "mem_beta_decay_rate": 0.9,
        "mem_beta_min": 0.0002,
        "init_state_type": "noise_all",
        "flush_noise": 1.0,
        "subclasses": [
            {
                "name": "memory_module",
                "class": "ValueMemory",
                "value_dim": 128,
                "capacity": 12,
                "recall_method": "weight_sum",
                "remove_retrieved": false,
                "subclasses": [
                    {
                        "name": "similarity_measure",
                        "class": "BasicSimilarity",
                        "process_similarity": "softmax",
                        "softmax_temperature": 0.05
                    }
                ]
            }
        ]
    },
    "training": [
        {
            "env": [
                {
                    "vector_env": {
                        "mode": "sync",
                        "batch_size": 16
                    },
                    "wrapper": [
                        {
                            "class": "MetaLearningEnv"
                        }
                    ],
                    "class": "FreeRecall",
                    "num_features": 6,
                    "feature_dim": 2,
                    "sequence_len": 12,
                    "correct_reward": 1.0,
                    "wrong_reward": -0.75,
                    "no_action_reward": -0.75
                }
            ],
            "trainer": {
                "num_iter": 200000.0,
                "test_iter": 500,
                "save_iter": 5000,
                "use_memory": true,
                "stop_test_accu": 0.99,
                "mem_beta_decay_iter": 2000,
                "criterion": {
                    "class": "MultiRLLoss",
                    "criteria": [
                        {
                            "class": "A2CLoss",
                            "use_V": true,
                            "eta": 0.04,
                            "gamma": 0.6
                        }
                    ]
                },
                "ax_criterion": {
                    "class": "MultiAuxiliaryLoss",
                    "criteria": [
                        {
                            "class": "MemoryOneHotRegularization"
                        }
                    ]
                },
                "optimizer": {
                    "class": "Adam",
                    "lr": 0.003,
                    "lr_decay_factor": 0.1,
                    "lr_decay_patience": 30,
                    "lr_decay_threshold": 0.001,
                    "min_lr": 1e-07
                }
            }
        }
    ],
    "load_checkpoints": false,
    "load_saved_model": false,
    "context_num": 1000
}