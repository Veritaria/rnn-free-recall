{
    "run_num": 3,
    "model": {
        "class": "MultiTaskDeepValueMemoryGRU",
        "hidden_dim": 128,
        "input_dim": 41,
        "output_dims": [18, 3],
        "use_memory": true,
        "softmax_beta": 1.0,
        "evolve_state_between_phases": true,
        "em_gate_type": "scalar_sigmoid",
        "subclasses": [{
            "name": "memory_module",
            "class": "ValueMemory",
            "value_dim": 128,
            "capacity": 6,
            "recall_method": "weight_sum",
            "subclasses": [
                {
                    "name":"similarity_measure",
                    "class": "BasicSimilarity",
                    "process_similarity": "softmax",
                    "softmax_temperature": 0.1
                }
            ]
        }]
    },
    "training": [{
        "env": [{
            "vector_env": {
                "mode": "async",
                "batch_size": 32
            },
            "class": "ConditionalEMRecall",
            "wrapper": [{
                "class": "MetaLearningEnv"
            }, {
                "class": "PlaceHolderWrapper",
                "placeholder_dim": 4
            }],
            "num_features": 4,
            "feature_dim": 2,
            "sequence_len": 6,
            "reset_state_before_test": true,
            "no_early_stop": true,
            "sum_feature_placeholder": true,
            "has_question": false
        }],
        "trainer": {
            "num_iter": 3000,
            "test_iter": 1000,
            "save_iter": 2000,
            "stop_test_accu": 0.99,
            "use_memory": true,
            "sl_criterion": {
                "class": "MultiSupervisedLoss",
                "criteria": [
                    {
                        "class": "EncodingCrossEntropyLoss",
                        "class_num": 18,
                        "no_action_weight": 0.5
                    }
                ]
            },
            "optimizer": {
                "class": "Adam",
                "lr": 5e-4,
                "weight_decay": 2e-5,
                "lr_decay_factor": 0.5,
                "lr_decay_patience": 10,
                "lr_decay_threshold": 1e-3,
                "min_lr": 1e-7
            }
        }
    }, {
        "env": [{
            "vector_env": {
                "mode": "async",
                "batch_size": 32
            },
            "class": "ConditionalQuestionAnswer",
            "wrapper": [{
                "class": "PlaceHolderWrapper",
                "placeholder_dim": 19
            }, {
                "class": "MetaLearningEnv"
            }],
            "num_features": 4,
            "feature_dim": 2,
            "sequence_len": 6,
            "reset_state_before_test": true,
            "correct_reward": 2.0,
            "no_action_reward": -0.0,
            "wrong_reward": -2.0,
            "include_question_during_encode": true
        }],
        "trainer": {
            "num_iter": 1e6,
            "test_iter": 1000,
            "save_iter": 10000,
            "stop_test_accu": 0.99,
            "use_memory": true,
            "used_output_index": [1],
            "criterion": {
                "class": "MultiRLLoss",
                "criteria": [
                    {
                        "class": "A2CLoss",
                        "use_V": true,
                        "eta": 0.02,
                        "gamma": 1.0
                    }
                ]
            },
            "optimizer": {
                "class": "Adam",
                "lr": 5e-4,
                "weight_decay": 1e-5,
                "lr_decay_factor": 0.1,
                "lr_decay_patience": 50,
                "lr_decay_threshold": 1e-4,
                "min_lr": 1e-7
            }
        }
    }],
    "load_saved_model": false,
    "context_num": 1000
}