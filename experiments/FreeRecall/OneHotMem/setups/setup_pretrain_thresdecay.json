{
    "run_num": 3,
    "model": {
        "class": "ValueMemoryGRU",
        "hidden_dim": 128,
        "input_dim": 103,
        "output_dims": [51],
        "use_memory": true,
        "softmax_beta": 1.0,
        "evolve_state_between_phases": true,
        "em_gate_type": "scalar_sigmoid",
        "mem_beta_decay": true,
        "mem_beta_decay_rate": 0.5,
        "mem_beta_min": 1e-6,
        "subclasses": [{
            "name": "memory_module",
            "class": "ValueMemory",
            "value_dim": 128,
            "capacity": 8,
            "recall_method": "weight_sum",
            "subclasses": [
                {
                    "name":"similarity_measure",
                    "class": "BasicSimilarity",
                    "process_similarity": "softmax",
                    "softmax_temperature": 0.1
                }
            ]
        }]
    },
    "training": [{
        "env": [{
            "vector_env": {
                "mode": "async",
                "batch_size": 8
            },
            "class": "FreeRecall",
            "vocabulary_num": 50,
            "sequence_len": 8,
            "retrieve_time_limit": 8,
            "return_action": true,
            "return_reward": true,
            "reset_state_before_test": true,
            "false_reward": -0.75,
            "repeat_penalty": -0.75,
            "not_know_reward": -0.75
        }],
        "trainer": {
            "num_iter": 200,
            "test_iter": 100,
            "save_iter": 200,
            "use_memory": true,
            "stop_test_accu": 0.99,
            "sl_criterion": {
                "class": "MultiSupervisedLoss",
                "criteria": [
                    {
                        "class": "EncodingCrossEntropyLoss",
                        "class_num": 51
                    }
                ]
            },
            "optimizer": {
                "class": "Adam",
                "lr": 3e-3,
                "lr_decay_factor": 0.1,
                "lr_decay_patience": 30,
                "lr_decay_threshold": 1e-3,
                "min_lr": 1e-7
            }
        }
    }, {
        "env": [{
            "vector_env": {
                "mode": "sync",
                "batch_size": 16
            },
            "class": "FreeRecall",
            "vocabulary_num": 50,
            "sequence_len": 8,
            "retrieve_time_limit": 8,
            "return_action": true,
            "return_reward": true,
            "reset_state_before_test": true,
            "false_reward": -0.75,
            "repeat_penalty": -0.75,
            "not_know_reward": -0.75
        }],
        "trainer": {
            "num_iter": 1e5,
            "test_iter": 100,
            "save_iter": 5000,
            "use_memory": true,
            "stop_test_accu": 0.99,
            "mem_beta_decay_threshold": 0.85,
            "criterion": {
                "class": "MultiRLLoss",
                "criteria": [
                    {
                        "class": "A2CLoss",
                        "use_V": true,
                        "eta": 0.01,
                        "gamma": 0.99
                    }
                ]
            },
            "ax_criterion": {
                "class": "MultiAuxiliaryLoss",
                "criteria": [
                    {
                        "class": "MemoryOneHotRegularization"
                    }
                ]
            },
            "optimizer": {
                "class": "Adam",
                "lr": 3e-3,
                "lr_decay_factor": 0.1,
                "lr_decay_patience": 30,
                "lr_decay_threshold": 1e-3,
                "min_lr": 1e-7
            }
        }
    }],
    "load_saved_model": true,
    "context_num": 1000
}