{
    "model": {
        "class": "ValueMemoryLSTM",
        "input_dim": 21,
        "hidden_dim": 256,
        "decision_dim": 128,
        "output_dim": 21,
        "subclasses": [{
            "name":"memory_module",
            "class": "ValueMemory",
            "value_dim": 256,
            "capacity": 6,
            "subclasses": [
                {
                    "name":"similarity_measure",
                    "class": "LCASimilarity",
                    "lca_cycles": 5,
                    "input_size": 6,
                    "lateral_inhibition": 0.1
                }
            ]
        }]
    },
    "env": {
        "class": "FreeRecall",
        "vocabulary_num": 20,
        "memory_num": 5,
        "retrieve_time_limit": 10,
        "reset_state_before_test": true
    },
    "training": {
        "num_iter": 20000,
        "test": false,
        "test_iter": 100,
        "save_iter": 200,
        "optimizer": {
            "class": "Adam",
            "lr": 1e-4,
            "lr_decay_factor": 0.5,
            "lr_decay_patience": 10,
            "lr_decay_threshold": 1e-3,
            "min_lr": 1e-8
        }
    },
    "load_saved_model": true
}