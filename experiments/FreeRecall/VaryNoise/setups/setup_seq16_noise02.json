{
    "run_num": 20,
    "model": {
        "class": "ValueMemoryGRU",
        "hidden_dim": 128,
        "input_dim": 103,
        "output_dims": [
            51
        ],
        "use_memory": true,
        "softmax_beta": 1.0,
        "evolve_state_between_phases": true,
        "em_gate_type": "scalar_sigmoid",
        "init_state_type": "noise_all",
        "flush_noise": 0.2,
        "subclasses": [
            {
                "name": "memory_module",
                "class": "ValueMemory",
                "value_dim": 128,
                "capacity": 16,
                "recall_method": "weight_sum",
                "subclasses": [
                    {
                        "name": "similarity_measure",
                        "class": "BasicSimilarity",
                        "process_similarity": "softmax",
                        "softmax_temperature": 0.1
                    }
                ]
            }
        ]
    },
    "training": [
        {
            "env": [
                {
                    "vector_env": {
                        "mode": "async",
                        "batch_size": 16
                    },
                    "class": "FreeRecall",
                    "vocabulary_num": 50,
                    "memory_num": 16,
                    "retrieve_time_limit": 16,
                    "return_action": true,
                    "return_reward": true,
                    "reset_state_before_test": true,
                    "false_reward": -0.75,
                    "repeat_penalty": -0.75,
                    "not_know_reward": -0.75
                }
            ],
            "trainer": {
                "num_iter": 200,
                "test_iter": 100,
                "save_iter": 200,
                "use_memory": true,
                "stop_test_accu": 0.99,
                "sl_criterion": {
                    "class": "MultiSupervisedLoss",
                    "criteria": [
                        {
                            "class": "EncodingCrossEntropyLoss",
                            "class_num": 51
                        }
                    ]
                },
                "optimizer": {
                    "class": "Adam",
                    "lr": 0.003,
                    "lr_decay_factor": 0.1,
                    "lr_decay_patience": 30,
                    "lr_decay_threshold": 0.001,
                    "min_lr": 1e-07
                }
            }
        },
        {
            "env": [
                {
                    "vector_env": {
                        "mode": "async",
                        "batch_size": 16
                    },
                    "class": "FreeRecall",
                    "vocabulary_num": 50,
                    "memory_num": 16,
                    "retrieve_time_limit": 16,
                    "return_action": true,
                    "return_reward": true,
                    "reset_state_before_test": true,
                    "false_reward": -0.75,
                    "repeat_penalty": -0.75,
                    "not_know_reward": -0.75
                }
            ],
            "trainer": {
                "num_iter": 100000.0,
                "test_iter": 500,
                "save_iter": 5000,
                "use_memory": true,
                "stop_test_accu": 0.99,
                "criterion": {
                    "class": "MultiRLLoss",
                    "criteria": [
                        {
                            "class": "A2CLoss",
                            "use_V": true,
                            "eta": 0.005,
                            "gamma": 0.99
                        }
                    ]
                },
                "ax_criterion": {
                    "class": "MultiAuxiliaryLoss",
                    "criteria": [
                        {
                            "class": "MemoryOneHotRegularization"
                        }
                    ]
                },
                "optimizer": {
                    "class": "Adam",
                    "lr": 0.003,
                    "lr_decay_factor": 0.1,
                    "lr_decay_patience": 30,
                    "lr_decay_threshold": 0.001,
                    "min_lr": 1e-07
                }
            }
        }
    ],
    "load_saved_model": false,
    "context_num": 5000
}