{
    "model": {
        "class": "TCMRNN",
        "hidden_dim": 21
    },
    "env": {
        "class": "FreeRecall",
        "vocabulary_num": 20,
        "memory_num": 5,
        "retrieve_time_limit": 5,
        "start_recall_cue": false,
        "reset_state_before_test": false,
        "repeat_penalty": -1.0
    },
    "training": {
        "num_iter": 200000,
        "test": false,
        "test_iter": 1000,
        "save_iter": 2000,
        "use_memory": true,
        "criterion": {
            "class": "A2CLoss",
            "use_V": false
        },
        "optimizer": {
            "class": "Adam",
            "lr": 5e-4,
            "lr_decay_factor": 0.2,
            "lr_decay_patience": 10,
            "lr_decay_threshold": 1e-3,
            "min_lr": 1e-8
        }
    },
    "load_saved_model": false,
    "pretrain": true,
    "context_num": 1000
}