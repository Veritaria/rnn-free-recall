{
    "model": {
        "class": "TCMRNN",
        "hidden_dim": 128,
        "slot_num": 41,
        "tau": 10,
        "act_fn": "Tanh",
        "mem_gate_type": "scalar",
        "output_type": "recalled_item",
        "start_recall_with_ith_item_init": 1
    },
    "env": {
        "class": "FreeRecall",
        "vocabulary_num": 40,
        "memory_num": 10,
        "retrieve_time_limit": 10,
        "start_recall_cue": false,
        "reset_state_before_test": true,
        "repeat_penalty": -1.0
    },
    "training": {
        "num_iter": 100000,
        "test": false,
        "test_iter": 1000,
        "save_iter": 2000,
        "use_memory": true,
        "stop_test_accu": 0.99,
        "criterion": {
            "class": "A2CLoss",
            "use_V": false
        },
        "optimizer": {
            "class": "Adam",
            "lr": 5e-4,
            "lr_decay_factor": 0.2,
            "lr_decay_patience": 10,
            "lr_decay_threshold": 1e-3,
            "min_lr": 1e-8
        }
    },
    "load_saved_model": true,
    "pretrain": false,
    "context_num": 1000
}