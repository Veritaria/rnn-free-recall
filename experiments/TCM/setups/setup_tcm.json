{
    "run_num": 1,
    "model": {
        "class": "TCM",
        "dim": 51,
        "rand_mem": true,
        "start_recall_with_ith_item_init": 1,
        "softmax_temperature": 0.2
    },
    "training": [{
        "env": {
            "class": "FreeRecall",
            "vocabulary_num": 50,
            "memory_num": 8,
            "retrieve_time_limit": 8,
            "start_recall_cue": false,
            "reset_state_before_test": true
        },
        "trainer": {
            "num_iter": 0,
            "test": false,
            "test_iter": 500,
            "save_iter": 2000,
            "stop_test_accu": 0.99,
            "use_memory": true,
            "criterion": {
                "class": "EncodingCrossEntropyLoss",
                "class_num": 51
            },
            "optimizer": {
                "class": "Adam",
                "lr": 1e-3,
                "lr_decay_factor": 0.5,
                "lr_decay_patience": 10,
                "lr_decay_threshold": 1e-3,
                "min_lr": 1e-8
            } 
        }
    }],
    "load_saved_model": false,
    "pretrain": true,
    "context_num": 1000
}